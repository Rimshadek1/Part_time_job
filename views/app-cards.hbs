<!doctype html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport"
        content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="theme-color" content="#000000">
    <title>Growork</title>
    <meta name="description" content="Growork HTML Mobile Template">
    <meta name="keywords"
        content="bootstrap, wallet, banking, fintech mobile template, cordova, phonegap, mobile, html, responsive" />
    <link rel="icon" type="image/png" href="assets/img/favicon.png" sizes="32x32">
    <link rel="apple-touch-icon" sizes="180x180" href="assets/img/icon/192x192.png">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="manifest" href="__manifest.json">
</head>

<body>

    <!-- loader -->
    <div id="loader">
        <img src="assets/img/loading-icon.png" alt="icon" class="loading-icon">
    </div>
    <!-- * loader -->

    <!-- App Header -->
    <div class="appHeader">
        <div class="left">
            <a href="#" class="headerButton goBack">
                <ion-icon name="chevron-back-outline"></ion-icon>
            </a>
        </div>
        <div class="pageTitle">
            My Works
        </div>
        
    </div>
    <!-- * App Header -->
    <!-- App Capsule -->
    <div id="appCapsule">

        <div class="section mt-2">

            <!-- card block -->
            {{#each events}}

            <div class="card-block mb-2 {{@index}}">
                <div class="card-main">
                    <div class="card-button dropdown">
                        <button type="button" class="btn btn-link btn-icon" data-bs-toggle="dropdown">
                            <ion-icon name="ellipsis-horizontal"></ion-icon>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item"  href="/confirm-book/{{this._id}}">
                                <ion-icon name="pencil-outline"></ion-icon>Add
                            </a>
                            
                        </div>
                    </div>
                    <div class="balance">
                        <span class="label">Location</span>
                        <h1 class="title">{{this.Location}}</h1>
                    </div>
                    <div class="in">
                        <div class="card-number">
                            <span class="label">Date</span>
                            {{this.Date}}
                        </div>
                        <div class="bottom">
                            <div class="card-expiry">
                                <span class="label">Slots</span>
                                {{this.Slot_left}}
                            </div>
                            <div class="card-ccv">
                                <span class="label">Price</span>
                                {{this.ppp}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- * card block -->
            {{/each}}
        </div>

<style>
    .card-block {
        background-color: #000;
        /* default color */
    }
</style>
<script>
    const cards = document.querySelectorAll('.card-block');

    cards.forEach(card => {
        const randomColor = '#' + Math.floor(Math.random() * 16777215).toString(16); // generate a random hex color code
        card.style.backgroundColor = randomColor;
    });

</script>


    </div>
    <!-- * App Capsule -->


    <!-- App Bottom Menu -->
    <div class="appBottomMenu">
        <a href="/" class="item">
            <div class="col">
                <ion-icon name="pie-chart-outline"></ion-icon>
                <strong>Overview</strong>
            </div>
        </a>
        <a href="/app-transactions" class="item">
            <div class="col">
                <ion-icon name="document-text-outline"></ion-icon>
                <strong>Transaction</strong>
            </div>
        </a>
        <a href="/app-booking" class="item">
            <div class="col">
                <ion-icon name="apps-outline"></ion-icon>
                <strong>My Bookings</strong>
            </div>
        </a>
        <a href="/app-cards" class="item active">
            <div class="col">
                <ion-icon name="card-outline"></ion-icon>
                <strong>Events</strong>
            </div>
        </a>
        <a href="/app-settings" class="item">
            <div class="col">
                <ion-icon name="settings-outline"></ion-icon>
                <strong>Settings</strong>
            </div>
        </a>
    </div>
    <!-- * App Bottom Menu -->


    <!-- ========= JS Files =========  -->
    <!-- Bootstrap -->
    <script src="assets/js/lib/bootstrap.bundle.min.js"></script>
    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <!-- Splide -->
    <script src="assets/js/plugins/splide/splide.min.js"></script>
    <!-- Base Js File -->
    <script src="assets/js/base.js"></script>


</body>

</html>